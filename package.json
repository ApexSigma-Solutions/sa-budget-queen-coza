{
  "name": "sabudgetqueen-app",
  "version": "1.0.0",
  "description": "SA Budget Queen Application",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "build:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --platform=browser --format=esm --jsx=automatic --loader:.ts=tsx --loader:.tsx=tsx",
    "watch:js": "npm run build:js -- --watch",
    "build:css": "tailwindcss -i ./src/index.css -o ./public/index.css --minify",
    "watch:css": "tailwindcss -i ./src/index.css -o ./public/index.css --watch",
    "build": "npm run build:js && npm run build:css",
    "dev:server": "nodemon server.js",
    "dev": "concurrently \"npm:watch:*\" \"npm:dev:server\"",
    "lint": "eslint \"{src,components}/**/*.{ts,tsx}\" --quiet",
    "lint:fix": "eslint \"{src,components}/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"./**/*.{ts,tsx,js,json,html,md}\"",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.5",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/express": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
